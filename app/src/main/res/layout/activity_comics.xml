<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/margin_16dp"
    android:layout_marginTop="@dimen/margin_8dp"
    android:layout_marginEnd="@dimen/margin_16dp"
    android:layout_marginBottom="@dimen/margin_8dp"
    android:orientation="vertical"
    tools:context=".ui.activity.ComicsActivity">

    <TextView
        android:id="@+id/text_view_title_comics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_view_description_comics"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_view_date_comics"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_view_adress_comics"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_view_login_comics"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_view_price_comics"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_call_comics"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_height="wrap_content"
        android:text="@string/call" />

</LinearLayout>